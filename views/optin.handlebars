<main>

  <div class="container-fluid student-container col-md-12 align-self-start">

    <!--Roster Data Entry Form Wrapper-->
    <form id="form_optIn_add" name="form_optIn_add" autocomplete="nope">

      <div class="mx-5 mt-3">
        <h3>Opt-in For Text Messages</h3>
        <hr>
      </div>

      <div class="container-fluid">

        <!--Opt In Form-->
        <div class="card mx-5 my-2">
          <div class="card-header">Opt-In Information:</div>
          <div class="card-body">

            <div class="form-row">
              <!--First Name-->
              <div class="form-group col-md-3">
                <label class="form-label" for="first_name">First Name</label>
                <input type="text" class="form-control" name="first_name" id="first_name" maxlength="35" placeholder="First Name"
                  required>
                <p class="text-right feedback" id="feedback_first_name">35 characters remain</p>
              </div>
              <!--Last Name-->
              <div class="form-group col-md-5">
                <label class="form-label" for="last_name">Last Name</label>
                <input type="text" class="form-control" name="last_name" id="last_name" maxlength="60" placeholder="Last Name"
                  required>
                <p class="text-right feedback" id="feedback_last_name">60 characters remain</p>
              </div>
            </div>


            <div class="custom-control custom-checkbox mx-2">
              <input type="checkbox" class="custom-control-input" name="optinchk" id="optinchk">
              <label class="custom-control-label" for="optinchk">Yes! Sign Me Up! I Want to Receive Your Text Messages.</label>
              <br><small>(Checking this box will add your phone number to our database and you will receive text
                messages.)</small>
            </div>

            <div class="form-row mt-5">
              <!--Phone-->
              <div class="form-group col-md-3">
                <label class="form-label" for="phone_num_primary">Phone Number<small> (Required, must be a valid
                    number)</small></label>
                <input type="text" class="form-control" name="phone_num_primary" id="phone_num_primary" maxlength="14"
                  placeholder="(xxx) xxx-xxxx" required>
                <p class="text-right feedback" id="feedback_phone_num_primary">14 characters remain</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!--Button Group-->
      <hr class="mx-5">
      <div class="btnContainer d-flex mx-5">

        <div>
          <button type="submit" id="optIn_submit" class="button" name="optIn_submit">
            Click to Opt In!
            <span>
              <svg>
                <use xlink:href="#arrow" href="#arrow"></use>
              </svg>
            </span>
          </button>
        </div>

        <div class="ml-auto">
          <a href="/cancel" id="cancel" class="btn btn-outline-dark">Cancel</a>
        </div>

      </div>

    </form>
    <hr>

    <div class="card mx-5 my-2 d-none" id="success_card">
      <div class="card-header">Success!:</div>
      <div class="card-body">
          <h1>Kool!</h1>
          <h2>Thank You!</h2>
          <h3>For participating in the Kool Skool Tool Demo!</h3>
      </div>
      <div class="card-footer">     
        <div class="ml-auto">
          </p>You can close this browser window.</p>
        </div>
      </div>
    </div>

  </div>

</main>
<script src="/assets/js/cms.js" type="text/javascript"></script>
<script src="/assets/js/optin.js" type="text/javascript"></script>