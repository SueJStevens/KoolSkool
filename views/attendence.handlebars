<main>

  <div class="container-fluid personnel-container col-md-9 align-self-start">

    <!--Attendence Title-->
    <div class="mx-5 mt-3">
      <h3>Attendence</h3>
      <hr>
    </div>
    {{!-- End attendence title --}}

    <div class="card-body">
      <div id="accordion">
        <div class="card">
          {{#course}}
          {{!-- heading one needs to change dynamically --}}
          <div class="card-header" id="{{this.id}}">
            <h5 class="mb-0">
              <button class="btn btn-link" data-toggle="collapse" data-target="#control{{this.id}}" aria-expanded="false"
                aria-controls="control{{this.id}}">
                {{this.course_descr}}
              </button>
            </h5>
          </div>
          <div id="control{{this.id}}" class="collapse" aria-labelledby="control{{this.id}}" data-parent="#accordion">
            <div class="card-body">
              {{!-- table to fill with data via Personnel course map - autopopulate students with data --}}
              <div class="table-responsive">
                <table class="table">
                  <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    {{!-- <th scope="col">NickName</th> --}}
                    {{!-- <th scope="col">Photo</th> --}}
                    <th scope="col">Present?</th>
                  </tr>
                  <tbody>
                    {{#course_students}}
                    <tr>
                      <th scope="row">{{first_name}}</th>
                      <td>{{last_name}}</td>
                      <td>{{photo}}</td>
                      <td>
                        {{!-- slider will need css from w3 --}}
                        <label class="switch">
                          <input type="checkbox">
                          <span class="slider"></span>
                        </label>
                      </td>
                    </tr>
                    {{/course_students}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          {{!-- buttons for each accordian --}}
          <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
            <div class="btn-group mr-2" role="group" aria-label="First group">
              <button type="button" class="btn btn-primary present">All Present</button>
              <button type="button" class="btn btn-secondary clear ">Clear All</button>
              <button type="button" class="btn btn-primary submit">Submit</button>
            </div>
          </div>
          {{/course}}
        </div>
      </div>
    </div>
  </div>
</main>

<!--Our Local js file-->
<script src="/assets/js/personnel.js" type="text/javascript"></script>