<main>

  <div class="container-fluid personnel-container col-md-9 align-self-start">

    <!--Attendence Title-->
    <div class="mx-5 mt-3">
      <h3>Attendance</h3>
      <hr>
    </div>
    {{!-- End attendence title --}}

    <div class="card-body">
      <div id="accordion">
        <div class="card">
          {{#course}}
          {{!-- heading one needs to change dynamically --}}
          <div class="card-header" id="{{this.id}}">
            <h5 class="mb-0">
              <button class="btn btn-link" data-toggle="collapse" data-target="#control{{this.id}}" aria-expanded="false"
                aria-controls="control{{this.id}}">
                {{this.course_descr}}
              </button>
            </h5>
          </div>
          <div id="control{{this.id}}" class="collapse" aria-labelledby="control{{this.id}}" data-parent="#accordion">
            <div class="card-body" id="attendence-add">
              {{!-- table to fill with data via Personnel course map - autopopulate students with data --}}
              <div class="table-responsive">
                <table class="table">
                  <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Photo</th>
                    <th scope="col"><label class="switch">
                        <input type="checkbox" class="all-present">
                        <span class="slider"></span>
                      </label>
                    </th>
                  </tr>
                  <tbody>
                    {{#course_students}}
                    <tr>
                      <th scope="row">{{first_name}}</th>
                      <td>{{last_name}}</td>
                      <td><img src="/assets/images/students/{{photo}}" alt="{{photo}}"></td>
                      <td>
                        {{!-- slider will need css from w3 --}}
                        <label class="switch">
                          <input type="checkbox" class="absentcheck-{{this.student_course_map.course_id}}" data-student_id="{{this.student_course_map.student_id}}">
                          <span class="slider"></span>
                        </label>
                      </td>
                    </tr>
                    {{/course_students}}
                  </tbody>
                </table>
                {{!-- submit buttons for each accordian --}}
                <button type="button" class="btn btn-primary submit" data-courseid="{{this.id}}">Submit</button>
              </div>
            </div>
          </div>
          {{/course}}
        </div>
      </div>
    </div>
  </div>
</main>

<!--Our Local js file-->
<script src="/assets/js/attendence.js" type="text/javascript"></script>