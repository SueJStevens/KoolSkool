<div class="col-md-9 m-auto">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h4>Your Profile</h4>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <form method="POST" action="/update">
                        
                        <div class="form-group row">
                            <label for="first_name" class="col-4 col-form-label">First Name</label>
                            <div class="col-8">
                                <input id="first_name" name="first_name" value="{{user.first_name}}" placeholder="{{user.first_name}}" class="form-control here" type="text" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="last_name" class="col-4 col-form-label">Last Name</label>
                            <div class="col-8">
                                <input id="last_name" name="last_name" value="{{user.last_name}}" placeholder="{{user.last_name}}" class="form-control here" type="text" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="email" class="col-4 col-form-label">Email</label>
                            <div class="col-8">
                                <input id="email" name="email" value="{{user.email}}" placeholder="{{user.email}}" class="form-control here" required="required" type="text" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="newpass" class="col-4 col-form-label">New Password</label>
                            <div class="col-8">
                                <input id="password" name="password" placeholder="Password" class="form-control here" type="text">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-4 col-8">
                                <button name="submit" type="submit" class="btn btn-primary">Update My Profile</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>