  <main>

    <div class="container-fluid parent-container col-md-9 align-self-start">

      <!--Parent Data Entry Form Wrapper-->
      <form enctype="multipart/form-data" action="POST" method="" name="form_parents_add" autocomplete="nope">

        <div class="mx-5 mt-3">
          <h3>Parents</h3>
          <hr>
        </div>

        <!--Contact Information-->
        <div class="card mx-5 my-2">
          <div class="card-header">Contact Information:</div>
          <div class="card-body">

            {{> name-block}}

            {{> address-block}}

          </div>
        </div>

        {{> phone_email-block}}

        <!--Additional Information-->
        <div class="card mx-5 my-2">
          <div class="card-header">Additional Information:</div>
          <div class="card-body">            
            {{> remarks-block}}
          </div>
        </div>

        <!--Button Group-->
        <hr class="mx-5">
        <div class="btnContainer d-flex mx-5">

          <div>
            <button id="submit_parent" class="button" name="submit_parent">
              Add Parent
              <span>
                <svg>
                  <use xlink:href="#arrow" href="#arrow"></use>
                </svg>
              </span>
            </button>
          </div>

          <div class="ml-auto">
            <a href="#." id="cancel" class="btn btn-outline-dark">Cancel</a>
          </div>

        </div>

      </form>
      <hr>
    </div>
    <div class="container-fluid student-container col-md-3 align-self-start">
      <!--Student Data Entry Form Wrapper-->
      <form enctype="multipart/form-data" action="" name="form_students_add" autocomplete="nope">
        <div class="mx-5 mt-3">
          <h3>Students</h3>
          <hr>
        </div>

      </form>


    </div>
  </main>

  <!--Our Local js file-->
  <script src="/assets/js/parents.js" type="text/javascript"></script>