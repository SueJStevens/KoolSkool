  <main>

    <div class="container-fluid parent-container col-md-9 align-self-start">

      <!--Parent Data Entry Form Wrapper-->
      <form enctype="multipart/form-data" action="POST" method="" name="form_parents_add" autocomplete="nope">

        <div class="mx-5 mt-3">
          <h3>Parents</h3>
          <hr>
        </div>

        <!--Contact Information-->
        <div class="card mx-5 my-2">
          <div class="card-header">Contact Information:</div>
          <div class="card-body">

            <div class="form-row">
              <!--First Name-->
              <div class="form-group col-md-3">
                <label class="form-label" for="first_name">First Name</label>
                <input type="text" class="form-control" name="first_name" id="first_name" maxlength="35" placeholder="First Name" value="" required>
                <p class="text-right feedback" id="feedback_first_name">35 characters remain</p>
              </div>
              <!--Middle-->
              <div class="form-group col-md-2">
                <label class="form-label" for="middle_name">Middle</label>
                <input type="text" class="form-control" name="middle_name" id="middle_name" maxlength="25" placeholder="Middle" value="">
                <p class="text-right feedback" id="feedback_middle_name">25 characters remain</p>
              </div>
              <!--Last Name-->
              <div class="form-group col-md-5">
                <label class="form-label" for="last_name">Last Name</label>
                <input type="text" class="form-control" name="last_name" id="last_name" maxlength="60" placeholder="Last Name"
                  value="" required>
                <p class="text-right feedback" id="feedback_last_name">60 characters remain</p>
              </div>
              <!--Suffix-->
              <div class="form-group col-md-2">
                <label class="form-label" for="suffix">Suffix</label>
                <select class="form-control" name="suffix" id="suffix">
                  <option disabled selected value>-- Select Suffix --</option>
                  <option>Sr.</option>
                  <option>Jr.</option>
                  <option>I</option>
                  <option>II</option>
                  <option>III</option>
                  <option>IV</option>
                  <option>M.D.</option>
                  <option>PhD</option>
                </select>
              </div>
            </div>
            <div class="form-row">
              <!--Address 1-->
              <div class="form-group col-md-8">
                <label class="form-label" for="address1">Address</label>
                <input type="text" class="form-control" name="address1" id="address1" maxlength="100" placeholder="Address Line 1"
                  value="">
                <p class="text-right feedback" id="feedback_address1">100 characters remain</p>
              </div>
              <!--Address 2-->
              <div class="form-group col-md-4">
                <label class="form-label" for="address2">Address 2</label>
                <input type="text" class="form-control" name="address2" id="address2" maxlength="60" placeholder="Address Line 2"
                  value="">
                <p class="text-right feedback" id="feedback_address2">60 characters remain</p>
              </div>
            </div>
            <div class="form-row">
              <!--City-->
              <div class="form-group col-md-8">
                <label class="form-label" for="city">City</label>
                <input type="text" class="form-control" name="city" id="city" maxlength="50" placeholder="City" value="">
                <p class="text-right feedback" id="feedback_city">50 characters remain</p>
              </div>
              <!--State Postal Code-->
              <div class="form-group col-md-2">
                <label class="form-label" for="statename">State</label>
                <select class="form-control" name='statename' id='statename'>
                  <option value="">--Select State--</option>
                  <option value="AL">Alabama</option>
                  <option value="AK">Alaska</option>
                  <option value="AS">American Samoa</option>
                  <option value="AZ">Arizona</option>
                  <option value="AR">Arkansas</option>
                  <option value="CA">California</option>
                  <option value="CO">Colorado</option>
                  <option value="CT">Connecticut</option>
                  <option value="DE">Delaware</option>
                  <option value="DC">Dist. of Columbia</option>
                  <option value="FL">Florida</option>
                  <option value="GA">Georgia</option>
                  <option value="GU">Guam</option>
                  <option value="HI">Hawaii</option>
                  <option value="ID">Idaho</option>
                  <option value="IL">Illinois</option>
                  <option value="IN">Indiana</option>
                  <option value="IA">Iowa</option>
                  <option value="KS">Kansas</option>
                  <option value="KY">Kentucky</option>
                  <option value="LA">Louisiana</option>
                  <option value="ME">Maine</option>
                  <option value="MD">Maryland</option>
                  <option value="MH">Marshall Islands</option>
                  <option value="MA">Massachusetts</option>
                  <option value="MI">Michigan</option>
                  <option value="FM">Micronesia</option>
                  <option value="MN">Minnesota</option>
                  <option value="MS">Mississippi</option>
                  <option value="MO">Missouri</option>
                  <option value="MT">Montana</option>
                  <option value="NE">Nebraska</option>
                  <option value="NV">Nevada</option>
                  <option value="NH">New Hampshire</option>
                  <option value="NJ">New Jersey</option>
                  <option value="NM">New Mexico</option>
                  <option value="NY">New York</option>
                  <option value="NC">North Carolina</option>
                  <option value="ND">North Dakota</option>
                  <option value="MP">Northern Marianas</option>
                  <option value="OH">Ohio</option>
                  <option value="OK">Oklahoma</option>
                  <option value="OR">Oregon</option>
                  <option value="PW">Palau</option>
                  <option value="PA">Pennsylvania</option>
                  <option value="PR">Puerto Rico</option>
                  <option value="RI">Rhode Island</option>
                  <option value="SC">South Carolina</option>
                  <option value="SD">South Dakota</option>
                  <option value="TN">Tennessee</option>
                  <option value="TX">Texas</option>
                  <option value="UT">Utah</option>
                  <option value="VT">Vermont</option>
                  <option value="VA">Virginia</option>
                  <option value="VI">Virgin Islands</option>
                  <option value="WA">Washington</option>
                  <option value="WV">West Virginia</option>
                  <option value="WI">Wisconsin</option>
                  <option value="WY">Wyoming</option>
                </select>
              </div>
              <!--Zip Code-->
              <div class="form-group col-md-2">
                <label class="form-label" for="zip">Zip Code</label>
                <input type="text" class="form-control" name="zip" id="zip" maxlength="10" placeholder="12345-6789"
                  value="">
                <p class="text-right feedback" id="feedback_zip">10 characters remain</p>
              </div>
            </div>
          </div>
        </div>

        <!--Telephone-->
        <div class="card mx-5 my-2">
          <div class="card-header">Telephone and Email Information:</div>
          <div class="card-body">
            <div class="form-row">
              <!--Email Address 1-->
              <div class="form-group col-md-6">
                <label class="form-label" for="email1">Email Address</label>
                <input type="text" class="form-control" name="email1" id="email1" maxlength="50" placeholder="Primary Email Address"
                  value="">
                <p class="text-right feedback" id="feedback_email1">50 characters remain</p>
              </div>
              <!--Phone-->
              <div class="form-group col-md-3">
                <label class="form-label" for="phone">Primary Phone Number</label>
                <input type="text" class="form-control" name="phone" id="phone" maxlength="14" placeholder="(xxx) xxx-xxxx"
                  value="">
                <p class="text-right feedback" id="feedback_phone">14 characters remain</p>
              </div>
              <!--Other Phone-->
              <div class="form-group col-md-3">
                <label class="form-label" for="otherphone">Alternate Phone Number</label>
                <input type="text" class="form-control" name="otherphone" id="otherphone" maxlength="14" placeholder="(xxx) xxx-xxxx"
                  value="">
                <p class="text-right feedback" id="feedback_otherphone">14 characters remain</p>
              </div>
            </div>
          </div>
        </div>

        <!--Additional Information-->
        <div class="card mx-5 my-2">
          <div class="card-header">Additional Information:</div>
          <div class="card-body">

            <div class="form-row">
              <!--Contact Notes-->
              <div class="form-group col-md-12">
                <label class="form-label" for="remarks">Notes / Remarks</label>
                <textarea class="form-control" name="remarks" id="remarks" maxlength="4000" placeholder="Notes and Comments"
                  rows="3"></textarea>
                <p class="text-right feedback" id="feedback_remarks">4000 characters remain</p>
              </div>
            </div>

          </div>
        </div>

        <!--Button Group-->
        <hr class="mx-5">
        <div class="btnContainer d-flex mx-5">

          <div>
            <button id="submit_parent" class="button" name="submit_parent">
              Add Parent
              <span>
                <svg>
                  <use xlink:href="#arrow" href="#arrow"></use>
                </svg>
              </span>
            </button>
          </div>

          <div class="ml-auto">
            <a href="#." id="cancel" class="btn btn-outline-dark">Cancel</a>
          </div>

        </div>

      </form>
      <hr>
    </div>
    <div class="container-fluid student-container col-md-3 align-self-start">
      <!--Student Data Entry Form Wrapper-->
      <form enctype="multipart/form-data" action="" name="form_students_add" autocomplete="nope">
        <div class="mx-5 mt-3">
          <h3>Students</h3>
          <hr>
        </div>

      </form>


    </div>
  </main>

