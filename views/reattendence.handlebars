<main>

  <div class="container-fluid personnel-container col-md-9 align-self-start">

    <!--Attendence Title-->
    <div class="mx-5 mt-3">
      <h3>Re-Attendance</h3>
      <hr>
    </div>
    {{!-- End attendence title --}}

    <div class="card-body">
      <div id="accordion">
        <div class="card">
          {{#each this.courses}}
          {{!-- heading one needs to change dynamically --}}
          <div class="card-header" id="{{id}}">
            <h5 class="mb-0">
              <button class="btn btn-link" data-toggle="collapse" data-target="#control{{id}}" aria-expanded="false"
                aria-controls="control{{id}}">
                {{this.course_descr}}
              </button>
            </h5>
          </div>
          <div id="control{{id}}" class="collapse" aria-labelledby="control{{id}}" data-parent="#accordion">
            <div class="card-body" id="attendence-add">
              {{!-- table to fill with data via Personnel course map - autopopulate students with data --}}
              <div class="table-responsive">
                <table class="table">
                  <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Present?</th>
                    <th scope="col"><label class="switch">
                        <input type="checkbox" class="all-present">
                        <span class="slider"></span>
                      </label>
                    </th>
                  </tr>
                  <tbody>
                    {{#each attendence}}
                    <tr>
                      <th scope="row">{{first_name}}</th>
                      <td>{{last_name}}</td>
                      <td>{{#if absent}}
                        <i class="fa fa-exclamation" style="color:red" aria-hidden="true"></i>
                        {{else}}
                        <i class="fa fa-gift" style="color:green" aria-hidden="true"></i>
                        {{/if}}
                      </td>
                      <td>
                        {{!-- slider will need css from w3 --}}
                        <label class="switch">
                          <input type="checkbox" class="absentcheck-{{this.student_id}}"
                            data-student_id="{{this.student_id}}">
                          <span class="slider"></span>
                        </label>
                      </td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
                {{!-- submit buttons for each accordian --}}
                <button type="button" class="btn btn-primary submit" data-courseid="{{id}}">Submit</button>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</main>

<!--Our Local js file-->
<script src="/assets/js/reattendence.js" type="text/javascript"></script>